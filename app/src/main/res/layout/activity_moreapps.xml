<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6EC"
    tools:context=".moreapps_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
               android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/srs" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Apps from SunRiseSoftwares Technologies"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
                android:textColor="#0E0E0E"
                android:textSize="14sp"
                android:textStyle="bold" />


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="1"
                app:rowCount="20">


                <androidx.cardview.widget.CardView
                    android:id="@+id/pp1"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="95dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/quoteapplogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Best Quotes App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp2"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/flashlightlogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FlashLight Controller App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp3"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/walpaperlogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Awesome Wallpapers App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pp4"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/hrdeveloperslogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HR Developers App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp5"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="4"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/cppbooklogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Learn C++ Basics App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp6"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="6"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/javaapplogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Learn Java Basics App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp7"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="7"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/cppbooklogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Best C++ Books App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pp8"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="8"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/javablogo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Best Java Books App"
                            android:layout_marginLeft="20dp"
                            android:textColor="#0E0E0E"
                            android:textSize="17sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>